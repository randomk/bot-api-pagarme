{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,   
    "sourceMap": true,                     
    "strict": true,   
    "rootDir": "./src",   
    "outDir": "lib",
    "baseUrl": "./src",
    "paths": {
      "@app/*": [ "app/*" ],
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}